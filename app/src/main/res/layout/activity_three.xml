<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.example.vaibhav.databasetest1.three">

    <Button
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="Add\n New Contacts"
        android:background="@drawable/my_button3"
        android:id="@+id/button"
        android:layout_marginTop="0dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#494242"
        android:typeface="serif"
        android:clickable="true"
        android:elevation="4dp"
        android:onClick="add" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:text="Search contacts"
        android:id="@+id/button3"
        android:background="@drawable/my_button3"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#494242"
        android:typeface="serif"
        android:clickable="true"
        android:elevation="4dp"
        android:onClick="sc" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:text="My Circle"
        android:id="@+id/button4"
        android:layout_marginTop="8dp"
        android:background="@drawable/my_button3"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:elevation="4dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#494242"
        android:typeface="serif"
        android:onClick="mc" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:text="Load Contacts \nfrom phone"
        android:id="@+id/button2"
        android:background="@drawable/my_button3"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#494242"
        android:typeface="serif"
        android:clickable="true"
        android:elevation="4dp"
        android:onClick="load"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
