<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vaibhav.databasetest1.sign_up2">

    <TextView
        android:text="Sign Up Step-2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textSize="30dp"
        android:id="@+id/textView2"
        android:textStyle="normal|bold|italic"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="Enter your location details to proceed further"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/textView3"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|italic"
        android:textSize="18dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:hint="City"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:background="@drawable/edittextback"
        android:layout_below="@+id/add"
        android:layout_alignLeft="@+id/add"
        android:layout_alignStart="@+id/add"
        android:layout_marginTop="45dp"
        android:id="@+id/city" />

    <Button
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_below="@+id/city"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:onClick="sigin"
        android:background="@drawable/signin2"
        android:id="@+id/button7" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPostalAddress"
        android:paddingLeft="15dp"
        android:hint="Home Address"
        android:ems="10"
        android:background="@drawable/edittextback"
        android:id="@+id/add"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
