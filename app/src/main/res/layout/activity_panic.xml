<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_panic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.vaibhav.databasetest1.panic">

    <Button
        android:layout_width="255dp"
        android:layout_height="290dp"
        android:layout_marginTop="154dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button3"
        android:onClick="panic"
        android:id="@+id/button9" />

    <TextView
        android:text="You can select the panic category as\nEmergency or Accident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:id="@+id/textView9"
        android:fontFamily="serif"
        android:textColor="#000000"
        android:textSize="18dp" />

    <Button
        android:text="Select Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:onClick="openAndroidBottomMenu"
        android:id="@+id/button10"
        android:background="@drawable/my_button5"
        android:textSize="18dp" />
</RelativeLayout>
