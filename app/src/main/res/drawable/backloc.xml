    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <gradient
        android:background="@android:color/transparent"
        android:startColor="@android:color/transparent"
        android:endColor="@android:color/transparent"
        android:type="linear"
        android:angle="360" />
